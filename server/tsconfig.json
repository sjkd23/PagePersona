{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@pagepersonai/shared/*": ["../shared/*"],
      "@pagepersonai/shared": ["../shared"],
      "shared/*": ["../shared/*"],
      "shared": ["../shared"]
    },
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/types/**/*.d.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.backup.ts", "**/__tests__/**/*"],
  "ts-node": {
    "files": true,
    "transpileOnly": false,
    "compiler": "typescript",
    "esm": false
  }
}
