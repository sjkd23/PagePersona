# Environment Variables for PagePersonAI Server
# Copy this file to .env and update the values

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Settings
PORT=5000
NODE_ENV=development

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration (REQUIRED)
MONGODB_URI=mongodb://localhost:27017/pagepersona

# JWT Configuration (REQUIRED for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# ===========================================
# AUTH0 CONFIGURATION
# ===========================================

# Auth0 Configuration (REQUIRED for production)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=your-auth0-api-identifier

# Auth0 Custom Claims (Optional - has defaults)
AUTH0_CUSTOM_USER_ID_CLAIM=https://api.pagepersona.com/user_id
AUTH0_ROLES_CLAIM=https://api.pagepersona.com/roles
AUTH0_PERMISSIONS_CLAIM=https://api.pagepersona.com/permissions

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Web Scraper Configuration (Optional - has defaults)
# WEB_SCRAPER_MAX_CONTENT_LENGTH=8000  # Maximum content length in characters
# WEB_SCRAPER_REQUEST_TIMEOUT_MS=10000  # Request timeout in milliseconds
# WEB_SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Logging
LOG_LEVEL=info

# CORS Configuration (Optional - has defaults)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# Rate Limiting (Optional - uses defaults from rateLimitConfigs.ts)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings (Optional - has defaults)
CACHE_TTL=3600

# Redis Configuration (Optional - graceful fallback to in-memory if not available)
# REDIS_URL=redis://localhost:6379  # Redis connection URL
# REDIS_PASSWORD=                   # Redis password (if required)
# REDIS_DB=0                        # Redis database number
# REDIS_DISABLED=false              # Set to true to completely disable Redis
