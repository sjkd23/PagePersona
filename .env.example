# Environment Variables for PagePersonAI
# Copy this file to .env.local and update the values
# This file contains ALL environment variables for both client and server

# ===========================================
# CLIENT CONFIGURATION (VITE_* variables)
# ===========================================

# API Configuration
VITE_API_URL=http://localhost:5000/api

# App Configuration
VITE_APP_NAME=PagePersonAI
VITE_APP_VERSION=1.0.0

# Development
VITE_DEV_MODE=true

# Auth0 Configuration (Client)
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-client-id
VITE_AUTH0_AUDIENCE=your-auth0-api-identifier

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Settings
PORT=5000
NODE_ENV=development

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration (REQUIRED)
MONGODB_URI=mongodb://localhost:27017/pagepersona

# JWT Configuration (REQUIRED for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# ===========================================
# AUTH0 CONFIGURATION
# ===========================================

# Auth0 Configuration (REQUIRED for production)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=your-auth0-api-identifier

# Auth0 Custom Claims (Optional - has defaults)
AUTH0_CUSTOM_USER_ID_CLAIM=https://api.pagepersona.com/user_id
AUTH0_ROLES_CLAIM=https://api.pagepersona.com/roles
AUTH0_PERMISSIONS_CLAIM=https://api.pagepersona.com/permissions

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Logging
LOG_LEVEL=info

# CORS Configuration (Optional - has defaults)
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting (Optional - uses defaults from rateLimitConfigs.ts)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings (Optional - has defaults)
CACHE_TTL=3600
