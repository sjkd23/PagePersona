{
  "name": "pagepersonai-monorepo",
  "version": "0.1.0",
  "description": "PagePersonAI - Transform web content with AI-powered personas",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "prepare": "husky",
    "build": "npm run build --workspace=shared && npm run build --workspace=server && npm run build --workspace=client",
    "start:dev": "npm run start:dev --workspace=server & npm run dev --workspace=client",
    "test": "npm test --workspaces",
    "clean": "rimraf */dist */node_modules/.cache",
    "release": "standard-version"
  },
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "express-jwt": "^8.5.1",
    "express-jwt-authz": "^2.4.1",
    "jwks-rsa": "^3.2.0"
  }
}
